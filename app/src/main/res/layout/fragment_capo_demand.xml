<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alim.bcm.fragments.CapoDemandFragment">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sFragrichieste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/spinnerArticoli">

    </android.support.v7.widget.AppCompatSpinner>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="LISTA ATTREZZI"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:visibility="gone" />


            <FrameLayout
                android:id="@+id/frameMateriali"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/refreshMateriali"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerMateriali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                    </android.support.v7.widget.RecyclerView>
                </android.support.v4.widget.SwipeRefreshLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameAttrezzi"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/refreshAttrezzi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewAttrezzi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        >

                    </android.support.v7.widget.RecyclerView>
                </android.support.v4.widget.SwipeRefreshLayout>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Data di consgna"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/eDataConsegna"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="GG/MM//AAAA"
                        android:inputType="date" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bApprovaRichiesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="conferma richiesta"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bAggiungiNota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="aggiungi nota"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
